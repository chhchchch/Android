<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@color/colorUse"
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/nickname"
            android:text="昵称"
            android:textSize="30dp"
            android:textColor="#fff"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/stu_id"
            android:text="StuID:"
            android:textSize="15dp"
            android:textColor="#fff"
            android:layout_below="@+id/nickname"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/stu_words"
            android:text="1"
            android:textSize="20dp"
            android:textColor="#fff"
            android:layout_below="@+id/stu_id"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="学习单词"
            android:textSize="15dp"
            android:textColor="#9B9595"
            android:layout_below="@+id/stu_words"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/head_portrait"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/circle_head_portrait"
            android:src="@drawable/head_portrait"
            android:scaleType="fitXY"
            />

    </RelativeLayout>

    <LinearLayout

        android:layout_weight="6"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="0dp">

        <LinearLayout
        android:background="#F3EDED"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:background="@drawable/thesaurus"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <TextView
            android:text="当前词库：CTE6.0"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"/>
    </LinearLayout>

        <LinearLayout
            android:background="#F3EDED"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@drawable/encourage"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:text="欢迎反馈"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"/>
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:background="#F3EDED"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@drawable/personal_info"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:id="@+id/person_info"
                android:text="个人信息"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:background="#F3EDED"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@drawable/about"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:text="关于"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/logout"
            android:text="退出"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:background="@drawable/shape_corner_button"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/cancel"
            android:text="注销用户并退出"
            android:textColor="#FF0000"
            android:layout_gravity="center"
            android:background="@drawable/shape_corner_button"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>